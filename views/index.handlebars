<div class="container">
    {{!-- burger picture and title --}}
    <div class="row justify-content-md-center">
        <img src="https://images.squarespace-cdn.com/content/v1/5c65461d4d546e0fca04a5b1/1550226225055-A5H3918VKOD94T3URZ4P/ke17ZwdGBToddI8pDm48kHwwVVpIDEotO6whwf-ctoFZw-zPPgdn4jUwVcJE1ZvWQUxwkmyExglNqGp0IvTJZUJFbgE-7XRK3dMEBRBhUpxuA20WKTN7UU1ULhIFfAfmu94jb5-jqEUuDrVqpiQJjhwhmweNBLY5iscLK0GPHOg/burgers.jpg" class="img-fluid" alt="three burgers">
        <h1>Eat Da Burger!</h1>
    </div>
    {{!-- list of newly created and devoured burgers--}}
    <div class="row justify-content-md-center">
        {{!-- list of newly created burgers--}}
        <div class="col-md-6">
            <h3>Ready to Eat!</h3>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            <h5>{{this.id}}.{{this.burger_name}}</h5>
                            <button type= "submit" id={{this.id}} class="eat-this-burger btn btn-outline-danger">Devour!!!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        {{!-- list of devoured burgers--}}
         <div class="col-md-6">
            <h3>Devoured Burgers</h3>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <h5 class="hide-devoured">{{this.id}}.{{this.burger_name}}</h5>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    {{!-- add new burgers here--}}
    <div class="row justify-content-md-center">
        <h1>Create your own burger here</h1>
        <form class="new-burger-input" action="burgers/insert" method="POST">
            <div>
                <textarea type="text" placeholder="Type the name of your burger here..." name="name"></textarea>
                <br>
                <button class="btn btn-outline-danger" type="submit">Create Now!</button>
                </div>
            </div>
        </form>
    </div>

</div>